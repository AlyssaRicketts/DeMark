<idea-plugin>
    <id>DeFacto.DeMark</id>
    <name>DeMark</name>
    <vendor email="atran35@uw.edu" url="http://github.com/DeFacto/DeMark">DeMark</vendor>

    <description><![CDATA[
    Allows user to add and delete temp code
    ]]></description>

    <change-notes><![CDATA[
      Release 0.1: Initial release.<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="DeMark.SampleMenu" text="DeMark" description="DeMark Menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="clear" class="HelloAction" text="Clear Marked Lines" description="Clear marked lines"/>
            <action id="unclear" class="HelloAction" text="Unclear Marked Lines" description="Undo the last clear"/>
            <action id="mark" class="HelloAction" text="Mark" description="Mark the current line"/>
            <action id="toggle" class="HelloAction" text="Toggle" description="Toggle debug mode on and off"/>
            <action id="display" class="HelloAction" text="Display" description="Display all marked lines"/>

        </group>
        <!--<action id="DeMark.HelloAction" class= "HelloAction" text="HelloAction"
                description="The action to clear  marked lines">
            <keyboard-shortcut keymap="$default" first-keystroke="alt M"/>
        </action>
        -->
    </actions>
</idea-plugin>
