<?xml version="1.0" encoding="UTF-8"?>
<project name="demark" default="all">
  
  
  <property file="build.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <property name="project.jdk.home" value=""/>
  <property name="project.jdk.bin" value=""/>
  <property name="project.jdk.classpath" value=""/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module DeMark -->
  
  <dirname property="module.demark.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.demark" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.demark" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.demark" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.demark" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="demark.output.dir" value="undefined"/>
  <property name="demark.testoutput.dir" value="undefined"/>
  
  <path id="demark.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="demark.module.production.classpath"/>
  
  <path id="demark.runtime.production.module.classpath"/>
  
  <path id="demark.module.classpath"/>
  
  <path id="demark.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.demark">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.demark">
    <patternset refid="excluded.from.module.demark"/>
  </patternset>
  
  
  <target name="compile.module.demark" depends="compile.module.demark.production,compile.module.demark.tests" description="Compile module DeMark"/>
  
  <target name="compile.module.demark.production" depends="register.custom.compilers" description="Compile module DeMark; production classes"/>
  
  <target name="compile.module.demark.tests" depends="register.custom.compilers,compile.module.demark.production" description="compile module DeMark; test classes" unless="skip.tests"/>
  
  <target name="clean.module.demark" description="cleanup module">
    <delete dir="${demark.output.dir}"/>
    <delete dir="${demark.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.demark" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.demark" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>